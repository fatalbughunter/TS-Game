{
  "name": "ace-of-shadows",
  "version": "1.0.0",
  "description": "A card stacking animation game using PixiJS v7",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "tsc --watch",
    "serve": "npx http-server . -p 8080 -o",
    "dev-server": "npm run build && npm run serve"
  },
  "dependencies": {
    "pixi.js": "^7.4.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "http-server": "^14.1.1",
    "typescript": "^5.0.0"
  }
}
